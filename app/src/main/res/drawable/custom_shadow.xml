 <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="30dp" />
            <solid android:color="@color/red" />
            <padding
                android:left="3dp"
                android:top="3dp"
                android:right="3dp"
                android:bottom="3dp" />
            <shadow
                android:color="@color/your_shadow_color"
                android:dx="0"
                android:dy="0"
                android:radius="9dp" />
        </shape>
    </item>
</layer-list>
