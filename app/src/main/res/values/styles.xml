<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OrderNote" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lavender</item>
        <item name="colorPrimaryVariant">@color/lavender</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>




    <!-- Define a   text style -->
    <style name="ScreenTitleTextStyle">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item> <!-- Example: red color -->
    </style>

    <style name="SubTitleTextStyle1">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item> <!-- Example: red color -->
    </style>
    <style name="SubTitleGreyTextStyle1">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/darkgrey</item> <!-- Example: red color -->
    </style>

    <style name="TextStyle1">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item> <!-- Example: red color -->
    </style>


    <style name="WhiteTextStyle">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item> <!-- Example: red color -->
    </style>

</resources>
