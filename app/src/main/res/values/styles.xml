<resources>
    <!-- Base application theme. -->
    <style name="Theme.OrderNote" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lavender</item>
        <item name="colorPrimaryVariant">@color/lavender</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lavender</item>
        <item name="colorSecondaryVariant">@color/lavender</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/reddishgrey</item>
        <!-- If you want light content (dark icons) in the status bar -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <item name="android:windowTranslucentStatus">false</item>

        <!-- Customize your theme here. -->
    </style>




