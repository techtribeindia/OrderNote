<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/transparent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rectangle_whitebackground">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Custom Title"
        android:textColor="@color/red"
        android:textAppearance="?attr/textAppearanceHeadline6" />

    <TextView
        android:id="@+id/dialogMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is a custom message."
        android:textAppearance="?attr/textAppearanceBody1"
        android:layout_marginTop="8dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/dialogNegativeButton"
            android:layout_width="110dp"
            android:layout_height="40dp"
             style="@style/BlackTextStyleSemiBold"
            android:background="@drawable/rectangle_whitebackground_blackborder"
            android:gravity="center"
            android:text="Cancel" />


        <TextView
            android:id="@+id/dialogPositiveBlackButton"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="OK"
            android:visibility="gone"
            android:gravity="center"
            style="@style/WhiteTextStyleBold"
            android:background="@drawable/rectangle_blackbackground"
            android:layout_marginStart="8dp" />



        <TextView
            android:id="@+id/dialogPositiveRedButton"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="OK"
            android:gravity="center"
            style="@style/WhiteTextStyleBold"
            android:background="@drawable/rectangle_redbackground"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</LinearLayout>
