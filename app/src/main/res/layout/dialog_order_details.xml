<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <TextView
    android:id="@+id/dialog_order_id"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Order ID: "
    android:textStyle="bold" />

    <TextView
        android:id="@+id/dialog_buyer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buyer Name: " />

    <TextView
        android:id="@+id/dialog_buyer_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buyer Address: " />

    <TextView
        android:id="@+id/dialog_order_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Quantity: " />

    <TextView
        android:id="@+id/dialog_order_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Price: " />
</LinearLayout>